<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Historial de Evaluaciones</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h1 class="text-center mb-4">Historial de Evaluaciones</h1>

    <% if (historial.length === 0) { %>
      <p class="alert alert-warning text-center">No hay evaluaciones registradas a√∫n.</p>
    <% } else { %>
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>Proyecto</th>
            <th>Fecha</th>
            <th>Mejor Alternativa</th>
            <th>Puntaje</th>
            <th>Descargar</th>
          </tr>
        </thead>
        <tbody>
          <% historial.forEach(item => { %>
            <tr>
              <td><%= item.proyecto || "Sin nombre" %></td>
              <td><%= item.fecha || "Fecha desconocida" %></td>
              <td><%= item.mejorAlternativa || "No evaluado" %></td>
              <td><%= item.puntaje ?? "Sin datos" %></td>
              <td>
                <a href="/descargar/<%= item.nombreArchivo %>" class="btn btn-outline-success btn-sm">Descargar</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <div class="text-center mt-4">
      <a href="/formulario" class="btn btn-primary">üè† Volver al Formulario</a>
    </div>
  </div>
</body>
</html>
